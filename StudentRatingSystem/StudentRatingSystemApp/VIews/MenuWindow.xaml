<Window x:Class="StudentRatingSystemApp.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentRatingSystemApp"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="810"
        ResizeMode="NoResize"
         Icon="C:\Users\user\Desktop\StudentRatingSystemTest\StudentRatingSystemApp\Assets\Icons\StudIcon.ico">
    <Grid>
        <Border Background="Beige" Margin="0,0,0,0" Height="434" VerticalAlignment="Bottom">

            <StackPanel Orientation="Horizontal">
                <TabControl TabStripPlacement="Top" Background="{StaticResource AccentColor}" Height="404" >
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Margin" Value="0,0,0,0"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="FontSize" Value="14"/>

                        </Style>
                    </TabControl.Resources>

                    <TabItem Header="Преподаватели" Background="{StaticResource TextPassiveColor}" Foreground="{StaticResource AccentColor}">
                       
                        <StackPanel Width="795" Background="{StaticResource AccentColor}">
                            <StackPanel.Resources>
                                
                            </StackPanel.Resources>
                            <Button Content="Добавить" Command="{Binding TAddCommand}"/>
                            <Button Content="Обновить" Command="{Binding TUpdateCommand}"/>
                            <Button Content="Удалить" Command="{Binding TRemoveCommand}"/>
                            <ListView FontSize="32" Foreground="{StaticResource TextActiveColor}" HorizontalAlignment ="Right" Height="375" Width="670" VerticalAlignment="Top" Margin="0,-110,10,0" ItemsSource="{Binding Teachers, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedTeacher, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                            
                    </TabItem>

                    <TabItem Header="Дисциплины" Background="{StaticResource TextPassiveColor}" Foreground="{StaticResource AccentColor}">
                        <StackPanel Background="{StaticResource AccentColor}" Width="795">
                            
                            <Button Content="Добавить" Command="{Binding SuAddCommand}"/>
                            <Button Content="Обновить" Command="{Binding SuUpdateCommand}"/>
                            <Button Content="Удалить" Command="{Binding SuRemoveCommand}"/>
                            <ListView FontSize="32" Foreground="{StaticResource TextActiveColor}" HorizontalAlignment ="Right" Height="375" Width="670" VerticalAlignment="Top" Margin="0,-110,10,0" ItemsSource="{Binding Subjects, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedSubject, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Студенты" Background="{StaticResource TextPassiveColor}" Foreground="{StaticResource AccentColor}">
                        <StackPanel Background="{StaticResource AccentColor}" Width="795">
                            <StackPanel.Resources>
                                
                            </StackPanel.Resources>
                            <Button Content="Добавить" Command="{Binding StAddCommand}"/>
                            <Button Content="Обновить" Command="{Binding StUpdateCommand}"/>
                            <Button Content="Удалить" Command="{Binding StRemoveCommand}"/>
                            <ListView FontSize="32" Foreground="{StaticResource TextActiveColor}" HorizontalAlignment ="Right" Height="375" Width="670" VerticalAlignment="Top" Margin="0,-110,10,0" ItemsSource="{Binding Students, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedStudent, UpdateSourceTrigger=PropertyChanged}"/>

                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Задания" Background="{StaticResource TextPassiveColor}" Foreground="{StaticResource AccentColor}" Height="31" VerticalAlignment="Top">
                        <StackPanel Background="{StaticResource AccentColor}" Width="795">
                            <StackPanel.Resources>
                                <Style TargetType="Button">
                                    <Setter Property="Margin" Value="5"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Width" Value="100"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
                                    <Setter Property="Foreground" Value="{StaticResource TextActiveColor}"/>
                                </Style>
                            </StackPanel.Resources>
                            <Button Content="Добавить" Command="{Binding QAddCommand}"/>
                            <Button Content="Обновить" Command="{Binding QUpdateCommand}"/>
                            <Button Content="Удалить" Command="{Binding QRemoveCommand}"/>
                            <ListView FontSize="32" Foreground="{StaticResource TextActiveColor}" HorizontalAlignment ="Right" Height="375" Width="670" VerticalAlignment="Top" Margin="0,-110,10,0" ItemsSource="{Binding Quests, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedQuest, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Оценки" Background="{StaticResource TextPassiveColor}" Foreground="{StaticResource AccentColor}" VerticalAlignment="Top" Height="31">
                        <StackPanel Height="400" Background="{StaticResource AccentColor}" HorizontalAlignment="Left" Width="795">
                            <StackPanel.Resources>
                                
                            </StackPanel.Resources>
                            <Button Content="Добавить" Command="{Binding GAddCommand}"/>
                            <Button Content="Обновить" Command="{Binding GUpdateCommand}"/>
                            <Button Content="Удалить" Command="{Binding GRemoveCommand}"/>
                            <ListView FontSize="32" Foreground="{StaticResource TextActiveColor}" HorizontalAlignment ="Right" Height="375" Width="670" VerticalAlignment="Top" Margin="0,-110,10,0" ItemsSource="{Binding Grades, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedGrade, UpdateSourceTrigger=PropertyChanged}"/>

                        </StackPanel>
                    </TabItem>



                    <TabItem Header="Рейтинг" Background="{StaticResource TextPassiveColor}" Foreground="{StaticResource AccentColor}">
                        <StackPanel Background="{StaticResource AccentColor}" Width="795" >
                            <ListView FontSize="22" HorizontalAlignment ="Right" Height="375" Width="775" Margin="0,10,10,0" ItemsSource="{Binding Grades, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedGrade, UpdateSourceTrigger=PropertyChanged}" Foreground="{StaticResource TextActiveColor}">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Студент" DisplayMemberBinding="{Binding Quest.Student.FIO}" Width="160"/>
                                        <GridViewColumn Header="Задание" DisplayMemberBinding="{Binding Quest.TypeOfTask}" Width="150"/>
                                        <GridViewColumn Header="Итоговый результат" DisplayMemberBinding="{Binding FinalScore}" Width="210"/>
                                        <GridViewColumn Header="Позиция" DisplayMemberBinding="{Binding Position}" Width="100"/>
                                        <GridViewColumn Header="Дисциплина" DisplayMemberBinding="{Binding Quest.Student.Subject.SubjectName}" Width="150"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>

                        </StackPanel>
                    </TabItem>

                </TabControl>


            </StackPanel>

        </Border>
    </Grid>
</Window>
